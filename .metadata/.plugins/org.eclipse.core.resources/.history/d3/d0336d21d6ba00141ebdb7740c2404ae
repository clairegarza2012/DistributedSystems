
public class CombsAndPerms {

	public static void main(String [] args){
		CombsAndPerms cwr = new CombsAndPerms();
		
		long n = 8;
		long k = 6;
				
		long ans = cwr.getCombinationWithRepetition(n, k);
				
		System.out.println(ans);
	}
	
	private long getCombinationWithRepetition(long n, long k){
		
		n = n + k - 1;

		return choose(n, k);
	}
	
	private long factorial(long a){
		
		long result = 1;
		
		
		for (long i = 2; i <= a; i++){
			result *= i;
		}
		
		return result;
	}
	
	private long choose(long n, long k){
		
		return factorial(n) / (factorial(k) * factorial(n - k) );
	}
	
}
