
public class Driver {

	public static void main(String[] args){
		
		Driver driver = new Driver();
	
		int first = 1;
		int second = 1;
		int n = 6;
		
		n = driver.doSequenceInterative(first, second, n);
		
		System.out.println("N: " + n);
		
		n = driver.doSequenceRecursive(first, second, 1, n);
		
		System.out.println("N: " + n);
	}

	private int doSequenceRecursive(int first, int second, int count, int n) {

		if (count == n){
			return second;
		}
		
		doSequenceRecursive(second, first + second, count++, n);
		return 0;
	}

	// works for n base 0
	private int doSequenceInterative(int first, int second, int n) {

		for (int count = 1; count < n; count++){
			int temp = second;
			second += first;
			first = temp;
			System.out.println("Count: " + count + " n: " + second);
		}
		
		return second;
	}
	
	
	
	
}
