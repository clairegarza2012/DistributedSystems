
public class CombsAndPerms {

	public static void main(String [] args){
		CombsAndPerms cwr = new CombsAndPerms();
		
		int n = 8;
		int k = 24;
		
		int ans = cwr.getCombinationWithRepetition(n, k);
		
		System.out.println(ans);
	}
	
	private int getCombinationWithRepetition(int n, int k){
		
		n = n + k - 1;
		
		int top = factorial(n);
		
		int bottom = factorial(k) * (factorial(n - k));
		
		return top / bottom;
	}
	
	private int factorial(int a){
		
		int result = 1;
		
		
		for (int i = 2; i <= a; i++){
			result *= i;
		}
		
		return result;
	}
	
}
