	private static class Make {

		private String name;

		private ArrayList<String> models = new ArrayList<String>();

		public Make (String name){
			this.name = name;
		}

		public void addModel(String model){
			models.add(model);
		}

		public void removeModel(String model){
			models.remove(model);
		}

		public void getModel(int index){
			models.get(index);
		}
	}
